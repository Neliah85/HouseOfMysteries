            <TabItem Header="Roles">
                <Grid>
                    <Button x:Name="btnGetAllRoles" Content="Get all roles" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Width="179" Click="btnGetAllRoles_Click"/>
