                             " Height="20" Focusable="False" Background="{Binding ElementName=grid, Mode=OneWay}" Foreground="#FF5B5CAB" FontWeight="Bold" GotFocus="txbUserId_GotFocus" TextChanged="txbUserId_TextChanged"/>


