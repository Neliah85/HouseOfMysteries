                    <TextBox x:Name="txbUsersRoleId" HorizontalAlignment="Left" Margin="0,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" BorderBrush="#FFABADB3" Background="{Binding ElementName=grid, Mode=OneWay}" Foreground="#FF5B5CAB" FontWeight="Bold"  Grid.ColumnSpan="2" Height="20" GotFocus="txbUsersRoleId_GotFocus" TextChanged="txbUsersRoleId_TextChanged" PreviewMouseRightButtonUp="txbUsersRoleId_PreviewMouseRightButtonUp" PreviewTextInput="txbUsersRoleId_PreviewTextInput" MaxLength="1" DataObject.Pasting="txbUsersRoleId_Pasting"/>

                    <TextBox x:Name="txbUsersRoleName" HorizontalAlignment="Left" Margin="0,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" BorderBrush="#FFABADB3" Background="{Binding ElementName=grid, Mode=OneWay}" Foreground="#FF5B5CAB" FontWeight="Bold"  Grid.ColumnSpan="2" Height="20" GotFocus="txbUsersRoleName_GotFocus" TextChanged="txbUsersRoleName_TextChanged" Focusable="False" />



                    <DataGrid x:Name="dgrUserData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="181,0,0,0" IsReadOnly="True" Background="#FFECF8FB" Grid.Column="1" CanUserReorderColumns="False" HorizontalGridLinesBrush="Black" SelectionChanged="dgrUserData_SelectionChanged"/>


