                    <Button x:Name="btnUsersGetByUserName" Content="Get user by username" HorizontalAlignment="Left" Margin="0,228,0,0" VerticalAlignment="Top" Width="179" Height="20" Click="btnUsersGetByUserName_Click" Grid.ColumnSpan="2"/>
